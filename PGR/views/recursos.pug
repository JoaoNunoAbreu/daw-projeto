extends header

block content
    .w3-row
        .w3-dropdown-hover.w3-white.w3-margin
            label Procurar por
            select(name="ord" id="ord" )
                option(value="nome") Autor 
                option(value="tipo") Tipo
                option(value="tags") Tags
                option(value="ano") Ano
            input(type="text" onkeydown="search(this)" id="search" class="search" placeholder="Search..")
                
    .w3-row
        .w3-container.w3-margin
            table.w3-table-all#myTable.w3-hoverable
                thead
                    tr
                        th Tipo
                        th Título 
                        th Descrição
                        th SubTítulo
                        th Data de criação
                        th Data de upload
                        th Tags
                        th Autor
                tbody
    script(src='https://code.jquery.com/jquery-3.5.1.js')
    link(rel='stylesheet', href='https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css')
    script(src='https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js')
    script.
        $(document).ready(function() {
            var token = '!{token}'
            $('#myTable').DataTable( {
                "paginate": true,
                "order": [[ 1, "desc" ]],
                "ajax": {
                    "url": "http://localhost:7777/recurso/lista?token="+token,
                    "type": "GET"
                },
                "columns": [
                    { "data": "tipo"},
                    { "data": "titulo" },
                    { "data": "descricao" },
                    { "data": "subtitulo" },
                    { "data": "dataCriacao" },
                    { "data": "dataRegisto" },
                    { "data": "hashtags" },
                    { "data": "nome" }
                ],
            });
        });
