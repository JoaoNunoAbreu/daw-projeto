extends layout

block content
    .w3-container.w3-teal
        header.w3-container.w3-teal
            h2 Registar
        form.w3-container(action='/registar' method='POST')
            label.w3-text-teal
                p.w3-text-white Nome:
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
            label.w3-text-teal
                p.w3-text-white Email:
                    input.w3-input.w3-border.w3-light-grey(type='text' name='email')

            label.w3-text-teal
                p.w3-text-white Password:
                    input.w3-input.w3-border.w3-light-grey(type='password' name='password')
            label.w3-text-teal
                p.w3-text-white Filiação:
                    select(id="filiacao" name="filiacao")
                        option(value="estudante") Estudante
                        option(value="professor") Professor 
            label.w3-text-teal
                p.w3-text-white Nível: 
                    select(id="nivel" name="nivel")
                            option(value="consumidor") Consumidor
                            option(value="produtor") Produtor
            br
            input.w3-btn.w3-tealw3-btn.w3-border.w3-margin-bottom.w3-left.w3-teal(type='submit' value='Registar')
            input.w3-btn.w3-border.w3-margin-bottom.w3-right.w3-teal(type='reset' value='Limpar')
    .w3-container.w3-teal
        footer.w3-container
            p
                a(href="/") Voltar à página principal


